<p id="notice"><%= notice %></p>

<h4>Pagos:</h4>

<table class="center">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Concepto</th>
      <th>Tarifa</th>
      <th>Pago</th>
      <th>Saldo</th>
    </tr>
  </thead>

  <tbody>
    <% @pagos.each do |pago| %>
    <% concep = Concepto.find_by(name: pago.concepto) %>
      <tr>
        <td><%= pago.created_at.to_date %></td>
        <td><%= pago.concepto %></td>
        <td><%= concep.tarifa %></td>
        <td><%= pago.cantidad %></td>
        <td><%= concep.tarifa - pago.cantidad %></td>
      </tr>
    <% end %>
  </tbody>
</table>
