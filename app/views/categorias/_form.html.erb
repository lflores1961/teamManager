<div class="bg-2">
<%= form_for(@categoria) do |f| %>
  <% if @categoria.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@categoria.errors.count, "errores") %> impidieron que la categoría se guarde:</h2>

      <ul>
      <% @categoria.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field-tm">
    <%= f.label :name, "Nombre de la categoría:" %><br>
    <%= f.text_field :name %>
  </div>
  <div >
    <%= f.submit "Guardar", class: "btn btn-default"%>
  </div>
<% end %>
</div>
